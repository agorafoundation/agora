<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body id="page-top">
        <%
        // initialize a override that can be used to show certain steps after they are completed.
        let topicOverride = -1;
        %>

        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
            <%- include('../partials/topmenu'); %> 
        </nav>


        <!-- About Section-->

        <section class="page-section-top-padded mb-0" id="about">
            <div class="container navbar-interior font-weight-bold text-primary">
                <%- include('../partials/community-menu') %>
                <%- include('../partials/welcome'); %>
            </div>


            <div class="container">

                <div class="divider-custom">
                </div>
                <a href="/community/workspace/<%- workspaceId %>">Back to Workspace</a> <%- (!!hasAccess)?'<span style="color:green">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;[Enrolled]</span>':'' %>
                <h2>Topic: <span class="text-primary" ><%- (!!topic)?topic.topicName:'' %></span></h2>
                <% if(!!locals.message){ %>
                    <div class="alert-message alert-message-success" role="alert">
                        <h3 ><%= message %></h3>
                        <p><%= (!!locals.message2)?message2:'' %></p>
                    </div>
                    
                <% } %>

                <div class="text-left mt-4">
                    <div id="story1" class="row justify-content-left">

                        <div class="col-lg-4">
                            <%- include('./partials/topic-enrollment-options'); %>
                            <input type="hidden" id="currentStepField" value="<%- (!!currentStep)?currentStep:'' %>" />
                            <input type="hidden" id="workspaceIdField" value="<%- (!!workspaceId)?workspaceId:'' %>" />
                            <input type="hidden" id="topicIdField" value="<%- (!!topic)?topic.topicId:'' %>" />
                            <%- (!!hasAccess)?include('./partials/topic-navigation'):''; %>
                            
                            
                        </div>
                        

                        <div class="col-lg-8">
                            <%- (!!hasAccess && topicEnrollment)?include('./partials/topic-main'):''; %>
                            

                        </div>
                        
                    </div>
                </div>
            
            
            
            
            </div>

        </section>

        <!-- Footer-->
        <footer class="footer text-center">
            <%- include('../partials/footer'); %>
        </footer>
        <!-- Copyright Section-->
        <div class="copyright py-4 text-center text-white">
            <%- include('../partials/copyright'); %>
        </div>
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
        <div class="scroll-to-top d-lg-none position-fixed">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
        </div>
        <%- include('../partials/jsincludes'); %>
    </body>
</html>