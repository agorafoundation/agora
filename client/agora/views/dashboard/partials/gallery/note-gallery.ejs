<!DOCTYPE html>

<html>

  <head>
    <script src="../../../../public/js/dashboard"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <%- include('../../../partials/head.ejs'); %>
  </head>

  <body>
    <!--Declaring ejs function to display cards-->
    <%- include('./delete-modal.ejs'); %>
    <%- include('./rename-modal.ejs'); %>
    <%- include('./alert-toast.ejs'); %>
    <% //name:string, description:string, tags:array, content:array %>
    <% const renderCard=(id,name,desc,tags,contentType, content)=> { 
        
      if (contentType === "Note") { %>

        <!--Note Card -->
        <div class="col mb-3 align-items-stretch gallery-col query-countable">
          <div class="card h-100 countable" id="<%= id %>" onmouseover="toggleMoreOptionsOn(id)" onmouseout="toggleMoreOptionsOff(id)" onclick="topicReroute(id, false)">
            <div class="dropdown dropbtn" id="option-<%= id %>" style="visibility: hidden">
              <img src="/assets/img/buttons/more-options.png" class="dropbtn"/>
              <%- include('./dropdown.ejs'); %>
            </div>
            <div class="card-body d-flex flex-column" id="topic">
              <h5 class="card-title" id="card-title-<%= id %>">
                <%= name %>
              </h5>
              <p class="card-text mb-4" id="card-desc-<%= id %>">
                <%= desc %>
              </p>
            </div>
            <div class="card-footer">
              <% for(let i=0; i < tags.length; i++) { %>
                <span class="badge badge-primary topic-badge">
                  <%= tags[i]%>
                </span>
              <% } %>
              <span class="badge badge-dark note-badge">
                <%= contentType %>
              </span>
            </div>
          </div>
        </div>
      <% } else if (contentType === "Goal") { %>

        <!--Goal Card-->
        <div class="col mb-3 align-items-stretch gallery-col query-countable">
          <div class="card h-100 countable" id="<%= id %>" onmouseover="toggleMoreOptionsOn(id)" onmouseout="toggleMoreOptionsOff(id)">
            <div class="dropdown dropbtn" id="option-<%= id %>" style="visibility: hidden">
              <img src="/assets/img/buttons/more-options.png" class="dropbtn"/>
              <%- include('./dropdown.ejs'); %>
            </div>
            <div class="card-body d-flex flex-column" id="goal">
              <h5 class="card-title" id="card-title-<%= id %>">
                  <%= name %>
              </h5>
              <div id="card-desc-<%= id %>"></div>
              <div>
                <% if (content) { %>
                  <ul class="list-group list-group-flush list-grid">
                    <% content.slice(0,8).forEach((item) => { %>
                      <!--topicReroute() below has a filler id-->
                      <li class="list-group-item item-list" title='Open <%=item%>' onclick="topicReroute(1, false)"> <span class="material-icons document-icon" >&nbsp;description</span><span class="item-list-text"><%= item %></span></li>
                    <% }) %>
                  </ul>
                <% } %>
              </div>
            </div>
            <div class="card-footer" >
              <% for(let i=0; i < tags.length; i++) { %>
                <span class="badge badge-primary topic-badge">
                  <%= tags[i]%>
                </span>
              <% } %>
              <span class="badge badge-dark note-badge">
                <%= contentType %>
              </span>
            </div>
          </div>
        </div>
      <% }}%>
</div>

<!--View Toggle-->
<%- include('./view-toggle.ejs'); %>  

<!--Search bar-->
<input id="topic-search" class="card-search" placeholder="Search" oninput="queryTopics(document.getElementById('topic-search').value, topicArr)"/>

  <hr class="mt-0">
  <div class="container">
  <!--Right Click Sub Menu-->
  <menu id="ctxMenu">
      <menu title="File">
          <menu title="Share"></menu>
          <menu title="Workflow"></menu>
          <menu title="Options"></menu>
      </menu>
      <menu title="Edit">
          <menu title="Cut"></menu>
          <menu title="Copy"></menu>
          <menu title="Paste"></menu>
      </menu>
  </menu>
  <div id="notepad">
  </div>

    <% for (let i = 0; i < availableResources.length + 1; i++) { 
      //add button
      if (i === 0) {
          %>
        
        
        <div class="row row-cols-1 row-cols-md-3 g-4 " id="gallery-row">
          <div class="col mb-3 gallery-col align-items-stretch gallery-col">
            <div class="card h-100" data-toggle="modal" data-target="#new-topic-goal-modal"      >
              <div class="card-body d-flex flex-column mt-1" id="add">
                <img src="/assets/img/buttons/new-content.png" class="mx-auto d-block btn-add-content"
                  alt="Add content">
              </div>
            </div>
          </div>
          <% }else{ 
            if(i % 2 === 0) {%>
            <% renderCard(i-1,availableResources[i-1].resourceName,availableResources[i-1].resourceDescription,["Bio","Chem"],"Note", null)
            }else{
              renderCard(i-1,availableResources[i-1].resourceName,availableResources[i-1].resourceDescription,["Bio","Chem"],"Goal", ["Doc 1","Doc 2","Doc 3", "Doc 4","Doc 5"])
              } %>
              <% }}%>
    </div>      
</html>