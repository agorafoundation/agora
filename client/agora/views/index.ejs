        <nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">
            <%- include('./partials/topmenu'); %>
        </nav>
        <!-- Masthead-->
        <header class="masthead bg-primary text-white text-center">
            <div class="container d-flex align-items-center flex-column">

                <div class="row">
                    <div class="col-sm-3 center" style="margin-left: 15vw; width:40vw; margin-top: 5vh">
                        <!-- Masthead Heading-->
                        <h1 class="masthead-heading text-uppercase mb-0 agora-font-large">Agora</h1>
                        <h4 class="agora-font">Agora for your notes</h4>
                    </br>
                        <h5 class="agora-font analogous2">Agora is an open, free, cloud based learning and research platform which improves users' learning and research experiences through intuitive and well defined organizational structure for user documents and other resources.</h5>
                    </br></br>
                        <a class="masthead-subheading homepageButton" href="/dashboard">Get Started</a>
                    </div>
                    <div class="col-sm-3 center" style="padding-left: 10vw;">
